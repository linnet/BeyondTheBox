<Window
  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
  xmlns:d="clr-namespace:Views;assembly=dealz.client"
  Title="dealz"
  MinWidth="800" MinHeight="600"
     Width="800"    Height="Auto"
  SizeToContent="WidthAndHeight">
  <Grid>
    <Grid.RowDefinitions>
      <RowDefinition Height="Auto"/>
      <RowDefinition Height="*"   />
      <RowDefinition Height="*"   />
    </Grid.RowDefinitions>
    <Grid.ColumnDefinitions>
      <ColumnDefinition Width="*"/>
      <ColumnDefinition Width="*"/>
    </Grid.ColumnDefinitions>
    <Grid Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2">
      <Grid.ColumnDefinitions>
        <ColumnDefinition Width="*"   />
        <ColumnDefinition Width="Auto"/>
      </Grid.ColumnDefinitions>
      <TextBlock Grid.Row="0" Grid.Column="0">dealz</TextBlock>
      <TextBlock Grid.Row="0" Grid.Column="1">[put user info here]</TextBlock>
    </Grid>
    <d:ChatzView Grid.Row="1" Grid.Column="0" Grid.RowSpan="2"/>
    <d:TickzView Grid.Row="1" Grid.Column="1"/>
    <d:ValuzView Grid.Row="2" Grid.Column="1"/>
  </Grid>
</Window>
 